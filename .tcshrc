#!/bin/tcsh

if (! $?prompt) exit

set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}"
if ( $USER == root ) then
	set usr="${red}%n"
else
	set usr="${green}%n"
endif

set nocloberb
set rmstat

set promptchars="#:"
#set prompt="${usr}${blue}@%m ${cyan}%c05 ${white}[%h] ${yellow}%B%T%b ${end} "
#set rprompt="${red}%?${end} "
set prompt="${usr}${magenta}@${blue}%m ${cyan}%c05 ${white}[%h] ${yellow}%B.%P.%b ${red}%?${end}\
\n${green}%#->${end} "

unset red green yellow blue magenta cyan white end usr

set history=5000
setenv EDITOR vi
setenv PAGER less

setenv LSCOLORS 'ExGxFxdxCxDxDxabadaeac'
alias ls 'ls -G'
alias ll 'ls -Al '
alias l 'ls -CF'
alias rmd 'rm -rf'
alias ddate 'date +"%T %d-%m-%y"'
